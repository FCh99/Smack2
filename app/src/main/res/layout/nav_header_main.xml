<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom" android:id="@+id/linearLayout" tools:layout_editor_absoluteY="81dp">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:id="@+id/userNameNavHeaderID"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/profiledefault"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/loginButtonNavHeaderID"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/textView2"
            tools:text="JonnyB"
            app:layout_constraintStart_toEndOf="@+id/userNameNavHeaderID" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/userNameNavHeaderID" android:text="JonnyB"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userEmailNavHeaderID"
            tools:text="jonny@devslopes.com" app:layout_constraintStart_toEndOf="@+id/userNameNavHeaderID"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:text="jonny@devslopes.com"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/loginButtonNavHeaderID"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:onClick="loginBtnNavClicked"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/addchannelbutton"
            android:id="@+id/addChannelBtnID"
            android:background="@android:color/transparent" android:scaleType="fitXY" android:padding="5dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="addChannelClicked"/>

</android.support.constraint.ConstraintLayout>
